@{
    Layout = null;
}
   
<!DOCTYPE html>

<html>
<head>
    <title>CheckOutBook</title>
    <link href="~/Content/Style.css" rel="stylesheet" /> 
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body >
    <div id="CheckOutBookForm" style="position:relative">
      <div id="dvMain" class="container"  >
        <table style="width:100%;" >
            <tr>
                <td width="30%">
                </td>
                <td width="70%" style="text-align: right;">
                    <div class="accountLogout" style="float: right;width: 70px;">
                        @Html.ActionLink("LOG OUT","LogOff", "Login")
                    </div>
                </td>
                <td style="width:0px;text-align: right;">
                </td>
            </tr>
        </table>

        <hr width="97%" size="2px" align="center" style="border-top: 1px solid rgb(221, 221, 221);">

        <section class="row" data-bind="visible: PanelLogin">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="login-form">
                    <br />
                    <br />
                    <br />
                    <div id="dvInstructions" class="instructions" ></div>

                    <select id="ddlSchool" class="form-control input-lg textbox" placeholder="Select School" onchange="schoolChanged(this)">Select School</select>
                    
                    <select id="ddlClass" class="form-control input-lg textbox" placeholder="Select Class" onchange="classChanged(this)">Select Class</select>
                    
                    <input id="bookId" class="form-control input-lg textbox" placeholder="Enter Book Id" />
                    
                    <button id="btnCheckOut" onclick="javascript:qAViewModel.checkOutBookClicked()" class="btn btn-lg btn-block btn-green">Check Out Book</button>
                    
                     <br />
                     <br />
                     <br />
                     <br />
                    <div id="dvSpinnerPageLoad" class="page-load-spinner-show" >
                        <img src="~/Images/spinner.png" />
                    </div>
                </div>
            </div>
        </section>
    </div>
       
    </div>
    <div style="width:25%;position:relative;margin-left:38%;">
        <table id="tblStudents" class="TFtable" ></table>
    </div>
    
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/kendo.all.min.js"></script>
    <script src="~/Scripts/ViewModels/CheckOutBook.js"></script>
</body>
</html>
